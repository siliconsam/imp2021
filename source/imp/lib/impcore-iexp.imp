{------------------------------------------------------------------------------}
    ! returns x ^ y
    %external %integer %function impiexp ( %integer y, x)
        %integer value;

        %signal 5, 2, y %unless (y >=0);

        value = 1;

        %while (y > 0) %cycle
            value = value * x
            y = y - 1
        %repeat

        %result = value
    %end

{------------------------------------------------------------------------------}
%endoffile
